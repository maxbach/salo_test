<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/city_from_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_input_from_background"
        android:hint="@string/global_input_from_hint"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/city_to_field"
        app:layout_constraintEnd_toEndOf="@id/input_background"
        app:layout_constraintStart_toStartOf="@id/input_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/global_black_20" />

    <TextView
        android:id="@+id/city_to_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_input_to_background"
        android:hint="@string/global_input_to_hint"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/input_background"
        app:layout_constraintStart_toStartOf="@id/input_background"
        app:layout_constraintTop_toBottomOf="@id/city_from_field" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_planes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="@string/main_button_title"
        app:backgroundTint="@color/colorAccent"
        app:cornerRadius="@dimen/main_screen_corner_radius" />

</LinearLayout>
